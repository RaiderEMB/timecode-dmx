; "Martin CX-4", 6 DMX channels, filename :mtcx4_6c.r20
;
;  Date       By        Description
;  05/10/01   Edward    Created from CX2
;
;----------------------------------------------------------------------------
; The device name, upto 11 characters, no spaces are allowed
DEVICE  MT_CX-4                                    6 DMX channels
NAME "Martin" "CX-4"
;
;----------------------------------------------------------------------------
; The Type of instrument, 1 & M must required for backward compatibility
; The middle number denotes the number of DMX channels used
TYPE    1   6   M
;
;----------------------------------------------------------------------------
; The Type of instrument, 1 & M must required for backward compatibility
; The middle number denotes the number of DMX channels used
MIRROR	1  230  77
;       |   |   |
;       |   |   |_______ maximum tilt movement (in degrees)
;       |   |___________ maximum pan movement (in degrees)
;       |_______________ 1 means moving mirror, 2 means moving head
;
;----------------------------------------------------------------------------
; Patching Information. (Upto 10 lines allowed)
DEVICEADDRESS
"Handle  %2d"h
"Fixture %11s"n
"DMX     %03d"d
""
""
""
""
""
""
""
DAEND
;
;----------------------------------------------------------------------------
; Specify DMX limits
;
; minimum allowed dmx number
MINDMX=1
;
; maximum allowed dmx number
MAXDMX=507
;
; DMX number must be divisible by this	
DIVBY=1
;
;----------------------------------------------------------------------------
; DMX channel description
;
;
DMX; This label signifies the start of the instrument layout info.
2   61   I   1   100 1N  O   1   "Shutter"     10     10     10
1    1   H   2   100 1N  H   1   "Dimmer"     255    255    255
4    1   I   3   100 1N  A   1   "Color"        0      0    134
6    1   I   4   100 1N  I   1   "Effect"       0      0      0
8    1   I   5   100 1N  0   1   "Speed"        0      0      0
8   61   I   6   100 1N  0   1   "Efx Speed"    0      0      0
END
;
;----------------------------------------------------------------------------
; Text to be displayed when the Instrument is selected for Patching
;
TEXT
  MARTIN CX-4
  6 Channels
Bank    Faders
   Bottom   Top
---------------------
 1 Dimmer   --
 2 --       Shutter
 3 --       --
 4 Color    --
 5 --       --
 6 Gobo     --
 7 --       -- 
 8 Speed   Efx Speed

INPUT fixture DMX No.
Press a Fixture 
Select or Swop button 
to make the patch.
END

ATTR
END
;
;----------------------------------------------------------------------------
; Tables

MACRO "RESET" 1    1
"data"        0   f0
"delay"       1   50
"data"        0   00
MEND

MACRO "Lamp Off" 2  1  2  3
"data"        0    ff fc fc 
"delay"       1   50
"data"        0    0   0  0
MEND

MACRO "Lamp On" 3    1
"data"        0   1e
"delay"       1   50
"data"        0   00
MEND
