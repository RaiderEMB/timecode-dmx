PFTABLE "Colour"     -1   1
"Open"                1   8
"Red"                 2  78
"Orange"              3  58
"Yellow"              4  28
"Green"               5  48
"Open"                6   8
"Blue"                7  38
"Peach Pink"          8  68
"Dark Purple"         9  98
"Dark Purple"        10  98
PFEND

;----------------------------------------------------------------------------
; Macros

;----------------------------------------------------------------------------
; Range Tables

; Column by column description...
; 1. Low DMX value (inclusive)
; 2. High DMX value (inclusive)
; 3. Displayed text (max 11 chars)
; Variables used a=low val, b=high val, c=DMX val

RANGE 1  ;Colour
0   0    "Off"
1   15   "Open"
16  31   "Pink"
32  47   "Yellow"
48  63   "Blue"
64  79   "Green"
80  95   "Orange"
96  111  "Peach Pink"
112 127  "Red"
128 143  "Deep Blue"
144 159  "Dark Purple"
160 191  "Scroll %3d%%"100-((c-a)*100/(b-a))
192 255  "Strobe %3d%%"(c-a)*100/(b-a)
REND

RANGE 2  ;Effect Rot
0   7    "No Spin"
8   131  "Sp CW %3d%%"(c-a)*100/(b-a)
132 255  "Sp CCW %3d%%"100-((c-a)*100/(b-a))
REND

