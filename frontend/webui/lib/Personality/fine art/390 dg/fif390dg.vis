Device FI_FI390DG

// Dimmer
ChanRef Dimmer
    Vismode Value
    UseBits 1 2 3 4 5 6 7 8
    DmxOffset 1
    Mapping 0 255 0 255
End

// Red
ChanRef Red
    Vismode Value
    UseBits 1 2 3 4 5 6 7 8
    DmxOffset 2
    Mapping 0 255 0 255
End

// Green
ChanRef Green
    Vismode Value
    UseBits 1 2 3 4 5 6 7 8
    DmxOffset 3
    Mapping 0 255 0 255
End

// Blue
ChanRef Blue
    Vismode Value
    UseBits 1 2 3 4 5 6 7 8
    DmxOffset 4
    Mapping 0 255 0 255
End

// Colour
ChanRef Color Wheel 1
    Vismode Value
    UseBits 1 2 3 4 5 6 7 8
    DmxOffset 5
    Mapping 0 31 White
    Mapping 32 63 RGB240,0,0
    Mapping 64 95 RGB0,240,0
    Mapping 96 127 RGB240,240,0
    Mapping 128 159 RGB0,0,240
    Mapping 160 191 RGB240,0,240
    Mapping 192 223 RGB0,240,240
    Mapping 224 255 White
End

// Shutter
ChanRef Dimmer
    Vismode Strobe
    UseBits 1 2 3 4 5 6 7 8
    DmxOffset 7
    Mapping 0 0 1 1
    Mapping 1 61 100 100
    Mapping 62 63 200 200
    Mapping 64 189 30 300
    Mapping 190 255 100 200
End

