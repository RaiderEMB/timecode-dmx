Device CH_CRADO6m3

// Dimmer
ChanRef Dimmer
    Vismode Value
    UseBits 1 2 3 4 5 6 7 8
    DmxOffset 1
    Mapping 0 255 0 255
End

// Red
ChanRef Red
    Vismode Value
    UseBits 1 2 3 4 5 6 7 8
    DmxOffset 2
    Mapping 0 255 0 255
End

// Green
ChanRef Green
    Vismode Value
    UseBits 1 2 3 4 5 6 7 8
    DmxOffset 3
    Mapping 0 255 0 255
End

// Blue
ChanRef Blue
    Vismode Value
    UseBits 1 2 3 4 5 6 7 8
    DmxOffset 4
    Mapping 0 255 0 255
End

// Colour Macro
ChanRef Color Wheel 1
    Vismode Value
    UseBits 1 2 3 4 5 6 7 8
    DmxOffset 5
    Mapping 0 9 White
    Mapping 10 29 Red
    Mapping 30 39 RGB200,20,0
    Mapping 40 49 RGB140,100,0
    Mapping 50 69 Yellow
    Mapping 70 79 RGB20,200,0
    Mapping 80 89 RGB100,140,0
    Mapping 90 109 Green
    Mapping 110 119 RGB0,200,20
    Mapping 120 129 RGB0,140,100
    Mapping 130 149 Blue
    Mapping 150 159 RGB0,20,200
    Mapping 160 169 RGB0,100,140
    Mapping 170 189 Cyan
    Mapping 190 199 RGB120,120,120
    Mapping 200 219 Magenta
    Mapping 220 229 RGB200,40,200
    Mapping 230 249 White
    Mapping 250 255 White
End

// Shutter
ChanRef Dimmer
    Vismode Strobe
    UseBits 1 2 3 4 5 6 7 8
    DmxOffset 6
    Mapping 0 4 1 1
    Mapping 5 255 30 300
End

