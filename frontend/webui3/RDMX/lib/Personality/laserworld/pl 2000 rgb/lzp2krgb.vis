Device LZ_PL2KRGB

// Red
ChanRef Red
    Vismode Value
    UseBits 1 2 3 4 5 6 7 8
    DmxOffset 1
    Mapping 0 255 0 255
End

// Green
ChanRef Green
    Vismode Value
    UseBits 1 2 3 4 5 6 7 8
    DmxOffset 2
    Mapping 0 255 0 255
End

// Blue
ChanRef Blue
    Vismode Value
    UseBits 1 2 3 4 5 6 7 8
    DmxOffset 3
    Mapping 0 255 0 255
End

// Colour
ChanRef Color Wheel 1
    Vismode Value
    UseBits 1 2 3 4 5 6 7 8
    DmxOffset 4
    Mapping 0 25 White
    Mapping 26 51 White
    Mapping 52 77 RGB240,240,0
    Mapping 78 103 RGB240,0,0
    Mapping 104 129 RGB0,240,0
    Mapping 130 155 RGB0,240,240
    Mapping 156 181 RGB0,0,240
    Mapping 182 207 RGB120,0,240
    Mapping 208 233 White
End

// Colour
ChanRef Color Wheel 1
    Vismode Speed
    UseBits 1 2 3 4 5 6 7 8
    DmxOffset 4
    Mapping 234 255 5 50
End

// Pan
ChanRef Pan
    Vismode Value
    UseBits 1 2 3 4 5 6 7 8
    DmxOffset 10
    Mapping 0 255 -265.000000 265.000000
End

// Tilt
ChanRef Tilt
    Vismode Value
    UseBits 1 2 3 4 5 6 7 8
    DmxOffset 11
    Mapping 0 255 -135.000000 135.000000
End

