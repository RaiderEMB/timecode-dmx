PFTABLE "Colors" -1 1
"White"      1   0  
"Red"        2  1a  
"Blue"       3  2b  
"Green"      4  3b  
"Yellow"     5  4b  
"Cyan"       6  5b  
"Orange"     7  6c  
"Pink"       8  7c  
"Magenta"    9  8c  
"UV Blue"    10 9c
PFEND

; Gobo table
PFTABLE "Gobos" -1  2
"Gobo1"     11   0    
"Gobo2"     12  28      
"Gobo3"     13  38  
"Gobo4"     14  48
"Gobo5"     15  58
"Gobo6"     16  68
"Gobo7"     17  78
"Gobo8"     18  88
PFEND