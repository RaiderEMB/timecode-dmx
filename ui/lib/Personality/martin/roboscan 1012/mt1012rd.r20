;----------------------------------------------------------------------------
; The device name, upto 11 characters, no spaces are allowed
DEVICE  MT_Rb1012RD                                   12 DMX channels
NAME "Martin" "RoboScan 1012"
;
;----------------------------------------------------------------------------
; The Type of instrument, 1 & M must required for backward compatibility
; The middle number denotes the number of DMX channels used
TYPE    1  12  M
;
;----------------------------------------------------------------------------
; Mirror/Head resolution
MIRROR	1	150	110
;       |   |   |
;       |   |   |_______ maximum tilt movement (in degrees)
;       |   |___________ maximum pan movement (in degrees)
;       |_______________ 1 means moving mirror, 2 means moving head
;
;----------------------------------------------------------------------------
; Patching Information. (Upto 10 lines allowed)
DEVICEADDRESS
"Handle  %2d"h
"Fixture %11s"n
"DMX     %03d"d
""
""
""
""
""
""
""
DAEND
;
;----------------------------------------------------------------------------
; Specify DMX limits
;
; minimum allowed dmx number
MINDMX=1
;
; maximum allowed dmx number
MAXDMX=501
;
; DMX number must be divisible by this	
DIVBY=1
;
;----------------------------------------------------------------------------
; DMX channel description
;
;
DMX
2   61  I   1   100 1N  O   1   "Shutter"     0    0    0
1   1   H   2   100 1N  H   1   "Dimmer"    255  255  255
4   1   I   3   100 1N  A   1   "Color 1"     0    0   18
4   61  I   4   100 1N  N   1   "Color 2"     0    0    0
6   1   I   5   100 1N  I   1   "Gobo 1"      0    0    0
6   61  I   6   100 1N  J   1   "Gobo 2"      0    0    0
5   61  L   7   100 1N  L   1   "Focus"       0    0    0
2   1   L   8   100 1N  G   1   "Iris"      255   -1   -1
9   1   L   9   100 1N  P   1   "Prism"       0    0    0
3   61  I   10  100 1N  E   1   "Pan"       128   -1   -1
3   1   I   11  100 1N  F   1   "Tilt"      128   -1   -1
8   1   I   12  100 1N  0   1   "Speed"       0    0    0
END
;
;----------------------------------------------------------------------------
; Text to be displayed when the Instrument is selected for Patching
;
TEXT
   ROBO 10/1220Rd
Bank    Faders
   Bottom   Top
---------------------
 1 Dimmer   --    
