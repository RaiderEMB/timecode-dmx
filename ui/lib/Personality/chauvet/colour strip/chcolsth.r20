"Amber"               3  D2  95   0   0
"Yellow"              4  D2   0   0   0
"Green"               5  D2   0  7F   0
"Cyan"                6  D2   0  7F  FF
"Blue"                7  D2  F9  7F  FF
"Lavender"            8  D2  57  2C  F2
"Purple"              9  D2  F9  40  FF
"Magenta"            10  D2  F9   0  FF
PFEND                        

;----------------------------------------------------------------------------
; Macros

;----------------------------------------------------------------------------
; Range Tables

; Column by column description...
; 1. Low DMX value (inclusive)
; 2. High DMX value (inclusive)
; 3. Displayed text (max 11 chars)
; Variables used a=low val, b=high val, c=DMX val

RANGE 1  ;Master
0   9    "Blackout"
10  19   "Red"
20  29   "Green"
30  39   "Blue"
40  49   "Yellow"
50  59   "Purple"
60  69   "Cyan"
70  79   "Open"
80  89   "Col Chg 1"
90  99   "Col Chg 2"
100 109  "Col Chg 3"
110 119  "Col Chg 4"
120 129  "Col Chg 5"
130 139  "Col Chg 6"
140 149  "Col Chs 1"
150 159  "Col Chs 2"
160 169  "Col Chs 3"
170 179  "Col Chs 4"
180 189  "Col Chs 5"
190 199  "Col Chs 6"
200 209  "Col Chs 7"
210 219  "RGB Mode"
220 229  "Colour Fade"
230 255  "Auto Run"
REND

RANGE 2  ;Red
0   127  "At Spd %3d%%"100-((c-a)*100/(b-a))
128 255  "Sound Act"
REND

RANGE 3  ;Green
0   249  "Flash  %3d%%"100-((c-a)*100/(b-a))
250 255  "Sound Act"
REND

RANGE 4  ;Blue
0   255  "%3d.%d%%"(c-a)*100/(b-a),10*((c-a)*100%(b-a))/(b-a)
REND

