Device GL_I120RZ_H

// Shutter
ChanRef Dimmer
    Vismode Strobe
    UseBits 1 2 3 4 5 6 7 8
    DmxOffset 11
    Mapping 0 15 0 0
    Mapping 144 199 30 300	//Strobe
    Mapping 200 239 30 300	//Strobe
    Mapping 240 255 1 1
End

// Shutter
ChanRef Dimmer
    Vismode Speed
    UseBits 1 2 3 4 5 6 7 8
    DmxOffset 11
    Mapping 48 79 10 100		//Open pulse
    Mapping 80 111 100 10	//Close pulse
End

// Shutter
ChanRef Dimmer
    Vismode Pulse
    UseBits 1 2 3 4 5 6 7 8
