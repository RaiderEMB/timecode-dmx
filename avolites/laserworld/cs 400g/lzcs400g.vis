Device LZ_CS400G

ChanRef Dimmer
    Vismode Value
    UseBits 1 2 3 4 5 6 7 8
    DmxOffset 3
    Mapping 0 255 255 255
End

// Shutter
ChanRef Dimmer
    Vismode Strobe
    UseBits 1 2 3 4 5 6 7 8
    DmxOffset 3
    Mapping 0 255 200 300
End

ChanRef Zoom
    Vismode Value
    UseBits 1 2 3 4 5 6 7 8
    DmxOffset 3
    Mapping 0 255 1 1
End

ChanRef Color Wheel 1
    Vismode Value
    UseBits 1 2 3 4 5 6 7 8
    DmxOffset 3
    Mapping 0 255 Green
End

// Pan
ChanRef Pan
    Vismode Value
    UseBits 1 2 3 4 5 6 7 8
    DmxOffset 4
    Mapping if 4 1 255 1 83 -90 0
    Mapping if 4 0 0 0 0 0 0
    Mapping if 4 1 255 84 167 0 90
    Mapping if 4 210 255 1 167 90 -90
End

// Pan
ChanRef Pan
    Vismode Speed
    UseBits 1 2 3 4 5 6 7 8
    DmxOffset 4
    Mapping 168 188 5 20
    Mapping 189 209 -5 -20
    Mapping 210 255 5 20
End

// Tilt
ChanRef Tilt
    Vismode Value
    UseBits 1 2 3 4 5 6 7 8
    DmxOffset 5
    Mapping if 5 1 255 1 83 -90 0
    Mapping if 5 0 0 0 0 0 0
    Mapping if 5 1 255 84 167 0 90
    Mapping if 5 210 255 1 167 90 -90
End

// Tilt
ChanRef Tilt
    Vismode Speed
    UseBits 1 2 3 4 5 6 7 8
    DmxOffset 5
    Mapping 168 188 5 20
    Mapping 189 209 -5 -20
    Mapping 210 255 5 20
End

